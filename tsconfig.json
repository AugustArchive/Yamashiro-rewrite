{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "es2018",
            "esnext"
        ],
        "declaration": false,
        "outDir": "./dist",
        "rootDir": "./src",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "types": [
            "node"
        ],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowJs": true,
        "typeRoots": ["./src/@types"]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}